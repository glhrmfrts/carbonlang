import std::system

extern(C) {
func HeapAlloc(
    hHeap:   int,
    dwFlags: int,
    dwBytes: usize
): &opaque

func HeapFree(
    hHeap:   int,
    dwFlags: int,
    lpMem:   &opaque
): bool

func GetProcessHeap(): int
}

extern(carbon, std::system) {
func alloc(size: usize): {&opaque, syserror} {
    return HeapAlloc(GetProcessHeap(), 0, size), NOERROR
}

func free(ptr: &opaque) {
    HeapFree(GetProcessHeap(), 0, ptr)
}
}
