import std::system

extern(C) {
func HeapAlloc(
    hHeap:   int,
    dwFlags: int,
    dwBytes: usize
): rawptr

func HeapFree(
    hHeap:   int,
    dwFlags: int,
    lpMem:   rawptr
): bool

func GetProcessHeap(): int
}

extern(carbon, std::system) {
func alloc(size: usize): rawptr {
    return HeapAlloc(GetProcessHeap(), 0, size)
}

func free(ptr: rawptr) {
    HeapFree(GetProcessHeap(), 0, ptr)
}
}
