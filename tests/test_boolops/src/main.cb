import std::io

let a : int

func side_effect() {
    a += 1
    return true
}

func main() {
    println(2 > 5) // false
    println(2 < 5) // true
    println(2 < 5 && 10 == 10) // true
    println(2 < 5 && 10 == 11) // false
    println(2 < 5 && 10 == 11 && 90 < 10) // false
    println(2 < 5 || 10 == 10) // true
    println(2 < 5 || 10 == 11 || 90 > 10) // true

    // to test jumps
    if (2 < 5 || 10 == 11 || 90 > 10) {
        println(true)
    }
    else {
        println(false)
    }
    // true

    if (2 < 5 && 10 == 11 && 90 < 10) {
        println(true)
    }
    else {
        println(false)
    }
    // false

    // test short-circuiting
    let ok : bool

    ok = 2 > 5 && side_effect()
    println(a) // 0

    ok = 2 > 5 || side_effect()
    println(a) // 1

    ok = 2 < 5 || side_effect()
    println(a) // 1
}