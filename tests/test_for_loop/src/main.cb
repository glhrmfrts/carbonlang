import std::io

func test_numeric_for() {
    let counter = 0
    for (i in 0,5) {
        print("numeric_for: ")
        println(i)
        counter += 1
    }
}

func test_numeric_for_neg() {
    let counter = 10
    
    for (i in 5,0) {
        print("numeric_for_neg: ")
        println(i)
        counter -= 1
    }
}

func get_limits() {
    return 0,5
}

func test_numeric_for_tuple() {
    let counter = 0
    for (i in get_limits()) {
        print("numeric_for_tuple: ")
        println(i)
        counter += 1
    }
}

func test_numeric_for_step() {
    for (i in 0,20,5) {
        print("numeric_for_step: ")
        println(i)
    }
}

func test_numeric_for_step_neg() {
    for (i in 20,0,-5) {
        print("numeric_for_step_neg: ")
        println(i)
    }
}

func test_boolean_for() {
    let counter = 0
    for (counter < 20) {
        counter += 1
    }
    print("boolean_for: ")
    println(counter)
}

func main() {
    test_numeric_for()
    test_numeric_for_neg()
    test_numeric_for_tuple()
    test_numeric_for_step()
    test_numeric_for_step_neg()
    test_boolean_for()
}