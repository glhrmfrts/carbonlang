import std::io

func print_size(i) {
    println(sizeof(i))
}

func print_size_type(type T) {
    println(sizeof(T))
}

type Data = struct {
    x: int
    y: int
    n: &Data
    p: &Data
}

func main() {
    let a : uint8
    let b : uint16
    let c : uint32
    let d : uint64
    let data : Data
    print_size(a)
    print_size(b)
    print_size(c)
    print_size(d)
    print_size(data)
    print_size_type(type int8)
    print_size_type(type int16)
    print_size_type(type int32)
    print_size_type(type int64)
    print_size_type(type Data)
}